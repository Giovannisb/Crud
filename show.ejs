<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My CRUD in NodeJS</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <style type="text/css">
      .titulo{
        margin-top: 20px;
        text-align: center;
        font-size: 3rem;
      }
      .corpo{
        background-color: #D9FFE3;
      }
      #tabela{
        font-size: 20px;
        margin: 30px;
      }
      .novo{
        font-size: 2rem;
        margin-left: 30px;
      }
  </style>
</head>
<body class="corpo">

<h1 class="titulo">Registros<h1>
    <table id="tabela" border="1">
        <thead>
            <tr>
                <td>Nome</td>
                <td>CPF</td>
                <td>Telefone</td>
                <td>Escolaridade</td>
                <td>Ação</td>
            </tr>
        </thead>
        <tbody>
        <% data.forEach(function(details) { %>
            <tr>
                <td><%= details.name %></td>
                <td><%= details.cpf %></td>
                <td><%= details.telefone %></td>
                <td><%= details.escolaridade %></td>
                <td><a href = "/edit/<%= details._id %>">Editar</a> - <a href = "/delete/<%= details._id %>">Deletar</a></td>
            </tr>
            <% }) %>
        </tbody>
        <button class="novo"><a href="/">Novo</a></button>

</body>
</html>